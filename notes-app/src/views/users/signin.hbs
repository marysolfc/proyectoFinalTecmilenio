<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Account Login</h1>
            </div>                    
        <img src="/img/logo.jpg" class="mx-auto d-block m-4 logo">
        <div class="card-body">
            <form action="/users/signin" method="post">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" autofocus value="{{email}}">
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="Password" value="{{password}}">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">SignIn</button>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>